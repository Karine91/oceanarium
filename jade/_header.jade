mixin menu(items, blockName)
    ul(class="#{blockName}")
        each item, ind in items
            if ind==5
                li(class="#{blockName}__item active")
                    a(href="#shedule", class="#{blockName}__link") #{item.name}
            else
                if item.link
                    li(class="#{blockName}__item")
                        a(href="##{item.link}", class="#{blockName}__link") #{item.name}
                else
                    li(class="#{blockName}__item")
                        a(href="#", class="#{blockName}__link") #{item.name}
